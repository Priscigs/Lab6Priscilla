<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.example.zvent3.rol.AddrolViewModel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/name_text"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="105dp"
            android:ems="10"
            android:hint="Ingrese el nombre"
            android:inputType="textPersonName"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/des_text"
            android:layout_width="317dp"
            android:layout_height="47dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Ingrese la descripciÃ³n"
            android:inputType="textPersonName"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_text" />

        <TextView
            android:id="@+id/select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="32dp"
            android:text="@string/orden_text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/des_text" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="316dp"
            android:layout_height="31dp"
            android:layout_marginTop="50dp"
            android:max="10"
            android:min="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>